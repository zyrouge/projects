<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Apps - ZYROUGE</title>

    <link href="https://unpkg.com/tailwindcss@^2/dist/tailwind.min.css" rel="stylesheet">
</head>

<body class="bg-gray-900 text-white">
    <div class="bg-gray-700 text-center py-12">
        <p class="text-5xl font-bold mb-4">Projects</p>
        <p>Made by <strong>ZYROUGE</strong></p>
    </div>

    <div class="mx-6 my-12">
        <% projects.forEach(chunk=> { %>
            <div class="flex flex-col md:flex-row align-items justify-center">
                <% chunk.forEach(proj=> { %>
                    <div class="bg-gray-700 rounded-lg overflow-hidden shadow-2xl mx-4 mb-8" id="card-container">
                        <a href="<%= proj.href || `/${proj.dir}` %>">
                            <div class="relative border-b-2 border-gray-600" id="card-header">
                                <img src="<%= proj.image  %>" id="card-image" alt="<%= proj.name %>">
                                <p class="px-6 py-4 font-bold text-center text-2xl absolute" id="card-title">
                                    <%= proj.name %>
                                </p>
                            </div>
                            <div class="px-6 py-4">
                                <div>
                                    <% proj.tags.forEach(tag=> { %>
                                        <div class="bg-gray-600 px-2 py-1 text-sm rounded mr-1 mb-1 inline-block">
                                            <%= tag %>
                                        </div>
                                    <% }); %>
                                </div>
                                <p class="mt-2 text-gray-400">
                                    <%- proj.description %>
                                </p>
                                <div class="mt-2 text-gray-400">
                                    <% if (proj.links.length) { %>
                                        <p>Links:
                                            <% proj.links.forEach(link=> { %>
                                                <a class="underline" href="<%= link.href %>"><%= link.name %></a>
                                            <% }); %>
                                        </p>
                                    <% } %>
                                </div>
                            </div>
                        </a>
                    </div>
                    <% }); %>
            </div>
            <% }); %>
    </div>

    <footer class="bg-gray-700 text-gray-400 text-center p-12">
        <p>&copy; Zyrouge Development 2021</p>
        <p>Licensed under <b>MIT</b></p>
    </footer>
</body>

<style>
    @import url("https://fonts.googleapis.com/css2?family=Sora&display=swap");

    * {
        margin: 0;
        padding: 0;
    }

    body {
        font-family: "Sora", sans-serif;
    }

    #card-container {
        height: fit-content;
        transition: 0.2s;
    }

    #card-container:hover {
        transform: translateY(-5px);
    }

    #card-title {
        text-shadow: 0 0 10px rgb(0, 0, 0, 0.8);
        bottom: 0;
    }

    #card-image {
        object-fit: cover;
        width: 100%;
        height: 200px;
    }

    @media (min-width: 768px) {
        #card-container {
            max-width: 30%;
        }
    }

</style>

</html>
